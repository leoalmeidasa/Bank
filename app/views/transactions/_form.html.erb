<%= form_with(model: transaction) do |form| %>
  <% if transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label 'Valor' %>
    <%= form.text_field :amount %>
  </div>

  <div class="field">
    <%= form.label 'OPeração' %>
    <%= form.select :transaction_type, %w[Déposito Saque Transferência]%>
  </div>

  <div class="field">
    <%= form.label 'Número de Conta para Transferência' %>
    <%= form.collection_select(:account_id, Account.all, :id, :account_number, prompt: true) %>
  </div>

  <div class="field">
    <%= form.label 'Número de Conta' %>
    <%= form.collection_select(:account_id, Account.all, :id, :account_number, prompt: true) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
