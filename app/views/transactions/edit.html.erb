<h1>New Transaction</h1>

<% if @transaction.errors.any? %>
  <div class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
    <ul>
      <% @transaction.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @transaction) do |form| %>
  <div class="field">
    <%= form.label 'Valor' %>
    <%= form.text_field :amount %>
  </div>

  <div class="field">
    <%= form.label 'OPeração' %>
    <%= form.select :transaction_type, %w[Transferência]%>
  </div>

  <div class="field">
    <%= form.label 'Número de Conta para Transferência' %>
    <%= form.collection_select(:account_id, Account.all, :id, :account_number, prompt: true) %>
  </div>

  <div class="field">
    <%= form.label 'Número de Conta' %>
    <%= form.collection_select(:account_id, Account.all, :id, :account_number, prompt: true) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
