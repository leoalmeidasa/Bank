<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Balance</th>
      <th>Account number</th>
      <th>Enabled</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.balance %></td>
        <td><%= account.account_number %></td>
        <td><%= account.enabled ? 'Ativo' : 'Inativo' %></td>
        <td><%= account.user_id %></td>
        <td><%= link_to 'Mostrar', account %></td>
        <td><%= link_to 'Editar', edit_account_path(account) %></td>
        <td><%= link_to 'Encerrar', account, method: :delete, data: { confirm: 'Deseja encerrar sua conta?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

