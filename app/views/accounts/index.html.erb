<p id="notice"><%= notice %></p>

<h1>Contas</h1>

<table class="table table-stripped table-hover">
  <thead>
    <tr>
      <th>Balanço</th>
      <th>Número da Conta</th>
      <th>Status</th>
      <th>Usúario</th>
      <th>Ações</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.balance %></td>
        <td><%= account.account_number %></td>
        <td><%= account.enabled ? 'Ativo' : 'Inativo' %></td>
        <td><%= account.user_id %></td>
        <td>
          <div class="row">
            <%= link_to 'Mostrar', account, class:'btn btn-info' %>
            <%= link_to 'Editar', edit_account_path(account), class:'btn btn-warning' %>
            <%= link_to 'Encerrar', account, method: :delete, data: { confirm: 'Deseja encerrar sua conta?' }, class:'btn btn-danger' %>
        </div>
        </td>
       </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path, class:'btn btn-success' %>
